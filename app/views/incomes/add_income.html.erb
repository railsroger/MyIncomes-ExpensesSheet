<div class="col-md-6 col-md-offset-3">
    <div class="new-expense-form">
      <%= form_for @new_income, :url => {:action => "add_income"} do |i| %>
          <table>
            <tbody>
            <tr>
              <td>Source</td>
              <td><%= i.text_field :source, :autofocus => true %></td>
            </tr>
            <tr>
              <td>Amount</td>
              <td><%= i.text_field :amount %></td>
            </tr>
            </tbody>
          </table>
          <br>
          <%= i.submit "Add Income", class: "btn btn-warning" %>
      <% end %>
          <br>
          <%= link_to "Back", income_index_path, class: "btn btn-warning"  %>
    </div>
</div>