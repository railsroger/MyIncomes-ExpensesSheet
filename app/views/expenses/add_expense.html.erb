  <div class="col-md-6 col-md-offset-3">
    <div class="new-expense-form">
      <%= form_for @new_expense, :url => {:action => "add_expense"} do |e| %>
          <table>
            <tbody>
            <tr>
              <td>Name</td>
              <td><%= e.text_field :name, :autofocus => true %></td>
            </tr>
            <tr>
              <td>Amount</td>
              <td><%= e.text_field :amount %></td>
            </tr>
            </tbody>
          </table>
          <br>
          <%= e.submit "Add Expence", class: "btn btn-warning" %>
      <% end %>
      <br>
      <%= link_to "Back", expense_index_path, class: "btn btn-warning"  %>
    </div>
  </div>
